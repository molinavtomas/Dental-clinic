/* üåô Tema Oscuro Moderno */

/* Estilo general de la app */
QWidget {
    background-color: transparent;
    color: #3a4a5c;
    font-family: "Segoe UI", "Roboto", sans-serif;
    font-size: 13px;
}

/* Botones */
QPushButton {
    background-color: #3498db;
    color: white;
    border-radius: 10px;
    padding: 8px 18px;
    font-weight: bold;
    border: none;
}

QPushButton:hover {
    background-color: #2980b9;
}

QPushButton:pressed {
    background-color: #1f618d;
    padding: 9px 19px; /* efecto presionado */
}

/* Inputs de texto */
QLineEdit, QTextEdit {
    background-color: #2c2c2c;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 6px;
    color: #eeeeee;
    selection-background-color: #3498db;
}

/* Labels */
QLabel {
    color: #cccccc;
}

/* Combobox */
QComboBox {
    background-color: #2c2c2c;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 6px;
    color: #eeeeee;
}

QComboBox:hover {
    border: 1px solid #3498db;
}

/* Tablas */
QTableWidget, QTableView {
    background-color: white;
    border: 1px solid rgba(42, 59, 76, 0.1);
    border-radius: 8px;
    gridline-color: rgba(42, 59, 76, 0.08);
    color: #3a4a5c;
    selection-background-color: rgba(74, 143, 235, 0.1);
    selection-color: #3a4a5c;
    font-size: 13px;
}

QHeaderView::section {
    background-color: #f8f9fa;
    color: #3a4a5c;
    padding: 10px 8px;
    border: none;
    border-bottom: 1px solid rgba(42, 59, 76, 0.1);
    font-weight: 600;
    font-size: 12px;
}

/* Scrollbars */
QScrollBar:vertical {
    background: rgba(42, 59, 76, 0.1);
    width: 10px;
    margin: 0px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: rgba(74, 143, 235, 0.3);
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(74, 143, 235, 0.5);
}

/* Checkbox */
QCheckBox {
    spacing: 6px;
    color: #3a4a5c;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border-radius: 3px;
    border: 1px solid rgba(42, 59, 76, 0.3);
    background: white;
}

QCheckBox::indicator:checked {
    background: #4a8feb;
    border: 1px solid #3a7bd5;
}

